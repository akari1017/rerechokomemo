<div class="tweets">
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
  <div class='item-contents'>
    <h2 class='title'>みんなの投稿</h2>
    
    <ul class='item-lists'>
      <% @tweets.each do |tweet| %>
        <div class='list'>
          <%= link_to tweet_path(tweet.id) do %>
          <div class='tweet-user'>
                <%= tweet.user.nickname %>
                </div>
            <div class='item-img-content'>
            <%= image_tag tweet.image, class: 'item-img'%>
            
            <div class='item-info'>
                 
              <h3 class='tweet-time'>
                <%= tweet.created_at.strftime('%Y/%m/%d') %>
              </h3>
              <h3 class='item-diary'>
                <%= tweet.diary %>
              </h3>
            </div>
            </div>
        <% end %>
        </div>
        <div id="likes_buttons_<%= tweet.id %>">
        <%= render partial: 'likes/like', locals: {tweet: tweet} %>
         </div>
      <% end %>
    </ul>
  </div>
